<% if logged_in? %> 
 <div class="row">
   <div class="col-md-5">
      <div class="widget">
      
                <div class="widget-head">
                  <div class="pull-left">Mi perfil</div>
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">
                    <div class="user">
                      <div class="user-pic">
