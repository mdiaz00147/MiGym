<% provide(:title, 'Crear clase') %>
<div class="page-head">
        <h2 class="pull-left"><i class="fa fa-child"></i> Crear clase</h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-child"></i> Home</a> 
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Crear clase</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="matter">
      <div class="container">
<div class="row">
	<div class="col-md-10 col-lg-offset-1">
        <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Agregar clase</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>
            	<div class="widget-content">
                	<div class="padd">
                    		<div class="form quick-post">
                       <%= form_for(@lesson, html: { class: "form-horizontal" } ) do |f| %>
                      	<%= f.hidden_field(:users_in, :value => 1) %>
												  <div class="form-group">
													<label class="control-label col-md-2" for="sitename"> Nombre
													</label>
													<div class="col-md-9">
													  <%= f.text_field :name, class: 'form-control' %>
													</div>
												  </div> 

												  <div class="form-group">
													<label class="col-lg-2 control-label" for="sitename"> Fecha</label>

													<div class="col-lg-10">
<%= f.datetime_select :start_date, { :order => [:month, :day, :year, :hour, :minute], :prompt => { :day => 'Dia', :month => 'Mes', :year => 'Ano', :hour => 'Hora', :minute => 'Minuto' } }, {:class => "form-control", :style => "display: inline-block;
    width: auto;
    vertical-align: middle;"}  %>
													</div>
													
												  </div> 
												  
												  <div class="form-group">
													<label class="control-label col-md-2" for="sitename"> Usuarios permitidos</label>
													<div class="col-md-5">
													  <%= f.number_field :users_allowed, class: 'form-control' %>
													</div>
												  </div>
												  <div class="form-group">
													<label class="control-label col-md-2" for="sitename"> Descripcion </label>
													<div class="col-md-5">
													  <%= f.text_area :description, class: 'form-control' %>
													</div>
												  </div> 
												  <!-- Buttons -->
												  <div class="form-group">
													 <!-- Buttons -->
													 <div class="col-lg-9 col-lg-offset-2">
													 <%= f.submit "Guardar", class: "btn btn-success" %>
														<button type="reset" class="btn btn-default">Reiniciar</button>
													 </div>
												  </div>
									  <% end %>
                            </div>
            		</div>
		            <div class="widget-foot">
			           
		            </div>
        		</div>
        </div>		
    </div>
</div>

