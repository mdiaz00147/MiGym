                        </div>
                      </div>

                      
                    </div>

                    <div class="row">

                      <div class="col-md-6">
                      	<hr />
                      	<h4>Historico de sesiones agendadas</h4>
                        <hr />
            <div class="padd">
            <div class="page-tables">
						<div class="table-responsive">
							<table class="table table-striped table-hover table-responsive table-bordered" id="data-table-1">
							  <thead>
								<tr>
								  <th>#</th>
								  <th>Nombre</th>
								  <th>Fecha</th>
								  <th>Hora</th>
								</tr>
							  </thead>
							  <tbody>
								<% @user_schedules.each_with_index do |lessons, index| %>
									
								<tr>
								  <td><%= index %></td>
								  <td><%= link_to lessons.lesson.name, lessons.lesson %></td>
								  <td><%= (lessons.lesson.start_date).strftime("%d/%m/%Y") %></td>
								  <td><%= (lessons.lesson.start_date).strftime("%k:%M") %></td>
								</tr>   
								<% end %>

							
								
							  </tbody>
							</table>
						</div>
            </div>
            </div>
                      </div>
                      <div class="col-md-6">
                      	<hr />
                      	<h4>Mi usuario</h4>
                        <hr />
						<div class="table-responsive">
							<table class="table table-striped table-hover table-responsive table-bordered">
							  
							  <tbody>
							  	<tr>
									<td>Vencimiento plan actual</td>  
									<td><%= (current_user.expiry_at).strftime("%d/%m/%Y") %></td>
								</tr>
								<tr>
									<td>Nombre plan actual</td>  
									<td><%= current_user.plan.name %></td>
								</tr>
								<tr>
								  <td>Iniciaste a entrenar el</td>
								  <td><%= current_user.created_at.strftime("%d/%m/%Y") %></td>
								  
								</tr>
								<tr>
								  <td>Ultima carga de clases</td>
								  <td><%= current_user.updated_at.strftime("%d/%m/%Y") %></td>
								  
								</tr>

							  </tbody>
							</table>
						</div>
                      </div>

                    </div>

                  </div>
                  <div class="widget-foot">
					
					
					<div class="clearfix"></div>
					
                  </div>
                </div>
              </div>  
              
