<% provide(:title, "Planes") %>
<div class="page-head">
        <h2 class="pull-left"><i class="fa fa-list"></i> Planes disponibles</h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-list"></i> Home</a> 
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Planes disponibles</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="matter">
      <div class="container">

  <div class="row">
   <div class="col-md-12">
    <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Planes disponibles</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

        <div class="widget-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Clases</th>
                <th>Inscripcíon</th>
                <th>Accíon</th>
              </tr>
              </thead>
             <tbody>
               <% @plans.each do |plan| %>
                <tr>
                  <td><%= plan.id %></td>
                  <td><%= plan.name %></td>
                  <td><%= number_to_currency(plan.price) %></td>
                  <td><%= plan.lessons %></td>
                  <td><%= plan.start_hour %> Hasta <%= plan.end_hour %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, plan,  class: "btn btn-xs btn-success" %>
                              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_plan_path(plan), class: "btn btn-xs btn-default" %>
                              <%= link_to '<i class="fa fa-times"></i>'.html_safe, plan, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
                </tr>
              <% end %>                                                          
             </tbody>
            </table>
          </div>
          <div class="widget-foot">                    
             <ul class="pagination pagination-sm pull-right">
               <li><a href="#">Prev</a></li>
               <li><a href="#">1</a></li>
               <li><a href="#">2</a></li>
               <li><a href="#">3</a></li>
               <li><a href="#">4</a></li>
               <li><a href="#">Next</a></li>
             </ul>
            <div class="clearfix"></div> 
          </div>

        </div>
      </div>
    </div>
  </div>

<% flash.each do |message_type, message| %>
  <% if message_type == "success" %>
  <script>
  swal({
      title: "<%= message %>",
      text:  "",
      type: "<%= message_type %>",
      timer: 3000,
      showConfirmButton: false
   })
  </script>
  <% end %>
  <% if message_type == "warning" %>
  <script>
  swal({
      title: "<%= message %>",
      text:  "",
      type: "<%= message_type %>",
      timer: 3000,
      showConfirmButton: false
   })
  </script>
  <% end %>
<% end %>