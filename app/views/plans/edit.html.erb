<div class="page-head">
        <h2 class="pull-left"><i class="fa fa-list"></i> Editar Plan</h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-list"></i> Home</a> 
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Editar Plan</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="matter">
      <div class="container">
   <div class="row">
    <div class="col-md-10 col-lg-offset-1">
            <div class="widget wred">
              <div class="widget-head">
                <i class="fa fa-list"></i> Crear Plan 
              </div>
              <div class="widget-content">
               <% if @plan.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

            <ul>
            <% @plan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
                <div class="padd">
                <% provide(:title, 'Crear usuarios') %>

          <%= form_for(@plan, html: { class: "form-horizontal" }) do |f| %>

                    <div class="form-group">
                          <label class="control-label col-md-2" for="sitename">Nombre</label>
                          <div class="col-md-9">
                    <%= f.text_field :name, class: ' form-control' %>
                          </div>
                    </div>
                    <div class="form-group">
                          <label class="control-label col-md-2" for="sitename">Numero de clases
                          </label>
                          <div class="col-md-9">
                    <%= f.number_field :lessons, class: 'form-control' %>
                          </div>
                    </div>

                    <div class="form-group">
                          <label class="control-label col-md-2" for="sitename">Precio
                          </label>
                          <div class="col-md-3">
                        <%= f.text_field :price, class: 'form-control' %>
                          </div>
                    </div>

                    <div class="form-group">
                          <label class="control-label col-md-2" for="sitename">Horas de inscripc√≠on
                          </label>
                          <div class="col-md-3">
                        <%= f.text_field :start_hour, class: 'form-control' %>
                        </div>
                          <div class="col-md-1 text-center">
                            A
                          </div>
                          <div class="col-md-3">
                        <%= f.text_field :end_hour, class: 'form-control' %>
                          </div>
                    </div>
  
                    <div class="form-group">
                           <!-- Buttons -->
                           <div class="col-lg-9 col-lg-offset-2">
                    <%= f.submit "Crear Plan", class: "btn btn-primary" %>
                           </div>
                    </div>
          <% end %>
                </div>
              </div>
              <div class="widget-foot">
                 
              </div>
            </div>
   </div>                
  </div>  
 </div>
